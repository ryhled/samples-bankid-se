@page
@model Samples.BankId.SE.Pages.SignTextModel

@{
    ViewData["Title"] = "Swedish BankID Sample App - Sign text";
}

<div class="row">
    <div class="col-sm-12 pb-4" style="background: #eee !important;">
        <h3>Swedish BankID Sample App - Sign text</h3>
        <form asp-page-handler="Sign" asp-antiforgery="true" method="post" class="mt-3">
            <div class="form-group">
                <label for="SigningText">SigningText</label>
                <input type="text" asp-for="SigningText" class="form-control" />
            </div>
            <div class="form-group">
                <label for="SocialSecurityNumber">SocialSecurityNumber</label>
                <input type="text" asp-for="SocialSecurityNumber" class="form-control" />
            </div>
            <div class="form-group mt-3 mb-3">
                
                <input type="checkbox" asp-for="SameDevice" class="form-check-input" />
                <label class="form-check-label" for="SameDevice">SameDevice</label>
            </div>
            <input class="btn btn-primary" type="submit" value="Sign" />
        </form>
        <p class="mt-3 mb-3 font-weight-bold">Status: @Model.StatusMessage</p>
        <div class="row">
            <div class="col"><hr></div>
            <div class="col-auto">Signature</div>
            <div class="col"><hr></div>
        </div>
        <p>
            <input type="text" asp-for="Signature" />
        </p>
        <p>@Model.XmlDsig</p>
        <div class="row">
            <div class="col"><hr></div>
            <div class="col-auto">Raw response</div>
            <div class="col"><hr></div>
        </div>
        <p>@Model.RawResponse</p>
    </div>
</div>

